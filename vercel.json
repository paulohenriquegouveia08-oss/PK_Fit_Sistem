{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "installCommand": "npm install && npm run db:generate",
    "framework": "vite",
    "functions": {
        "src/server/**/*.js": {
            "runtime": "nodejs18.x"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ]
}